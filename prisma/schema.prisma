generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Prompt {
  id        String   @id @default(cuid())
  content   String
  assistantName String
  model     String
  situationContext String
  createdAt DateTime @default(now())
  personas  Persona[]
  files     File[]
}

model Persona {
  id        String   @id @default(cuid())
  name      String
  promptId  String
  prompt    Prompt   @relation(fields: [promptId], references: [id])
}

model File {
  id        String   @id @default(cuid())
  name      String
  fileId    String
  promptId  String
  prompt    Prompt   @relation(fields: [promptId], references: [id])
}
